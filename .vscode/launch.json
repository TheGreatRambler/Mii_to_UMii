	"version": "0.2.0",
	"configurations": [
		{
			"name": "(gdb) Pc Application Windows",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/bin/miitoumii.exe",
			"args": [],
			"logging": {
				"moduleLoad": true,
				"exceptions": true
			},
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/bin",
			"environment": [],
			"externalConsole": true,
			"MIMode": "gdb",
			"miDebuggerPath": "gdb.exe",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "(gdb) Pc Application Linux",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/bin/miitoumii",
			"args": [],
			"logging": {
				"moduleLoad": true,
				"exceptions": true
			},
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/bin",
			"environment": [],
			"externalConsole": true,
			"MIMode": "gdb",
			"miDebuggerPath": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}